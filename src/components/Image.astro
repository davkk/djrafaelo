---
import { Img } from "astro-imagetools/components";

type Props = {
    name: string;
    alt: string;
    class?: string;
    objectPosition?: string;
    objectFit?: string;
};

const { name, alt, class: className, ...rest } = Astro.props as Props;

const src = import.meta.env.PROD
    ? `https://media.djrafaelo.pl/${name}`
    : `/src/images/${name}`;
---

<Img
    src={src}
    alt={alt}
    loading="lazy"
    breakpoints={[640, 768, 1024, 1280, 1536, 1920]}
    attributes={{
        img: {
            class: "rounded-xl " + className,
        },
    }}
    {...rest}
/>
