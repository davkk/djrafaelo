---
import { Img } from "astro-imagetools/components";

type Props = {
    src: string;
    alt: string;
    class: string;
};

const { src, alt, class: className } = Astro.props as Props;
---

<Img
    src={src}
    alt={alt}
    loading="lazy"
    breakpoints={[640, 768, 1024, 1280, 1536, 1920]}
    attributes={{
        img: {
            class: className,
        },
    }}
/>
