---
import "@fontsource/saira";
import "@fontsource/dm-serif-text";

import "../global.css";
import Contact from "../components/Contact.astro";

type Props = {
    title: string;
};

const { title } = Astro.props as Props;

const options = ["oferta", "kontakt"];
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{title}</title>
    </head>
    <body class="bg-dark text-light font-sans h-[30000px]">
        <header class="flex justify-between p-5 absolute inset-x-0 top-0">
            <Contact />

            <nav class="list-none text-right m-0 p-0">
                {
                    options.map((option) => (
                        <li class="m-0 md:mb-1">
                            <a
                                href={`#${option}`}
                                class="subtext text-xs md:text-sm underline underline-offset-2"
                            >
                                {option}
                            </a>
                        </li>
                    ))
                }
            </nav>
        </header>

        <main>
            <slot />
        </main>
    </body>
</html>
